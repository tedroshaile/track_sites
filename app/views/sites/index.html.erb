<h1>Listing sites</h1>

<table>
  <tr>
    <th>Site</th>
    <th>Comments</th>
    <th>Date Added</th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><a href="<%= site.url %>"><%= site.name %></a></td>
    <td><%= site.comments %></td>
    <td><%= site.created_at.to_formatted_s(:long) %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Delete', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

